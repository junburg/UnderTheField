<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical|center_horizontal"
    tools:context="com.example.gyeongsuk.underthefield.main.Recommendation.RecFragment"
    android:paddingTop="60dp"
    >

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#940308"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_below="@+id/recLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/recText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="URL 주소로 추천해 주실래욘?"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/userEt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recText2"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/urlEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userEt2"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="URL"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff" />


        <Button
            android:id="@+id/sendBtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/urlEt"
            android:background="@drawable/border"
            android:drawable="@drawable/border"
            android:text="추천하기"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#940308"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/recText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="여러분들이 알고있는 멋진 음악들을 추천해주세요!"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/artistEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userEt"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Aritst Name"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/titleEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artistEt"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Song Title"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleEt"
            android:background="@drawable/border"
            android:drawable="@drawable/border"
            android:text="추천하기"
            android:textColor="#ffffff"/>

        <EditText
            android:id="@+id/userEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Your Name"
            android:inputType="textPersonName"
            android:textColorHighlight="#131334"
            android:textColorHint="#ffffff"
            android:textColorLink="@color/colorAccent"
            android:layout_below="@+id/recText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

    </RelativeLayout>

</RelativeLayout>
