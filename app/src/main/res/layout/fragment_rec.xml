<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyeongsuk.underthefield.main.Recommendation.RecFragment"
    >

    <RelativeLayout
        android:id="@+id/recLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:background="#00257b"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/recText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="여러분들이 알고있는 사운드 클라우드 음악들을 추천해주세요!"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/border"/>

        <EditText
            android:id="@+id/artistEt"
            android:layout_width="match_parent"
            android:textSize="16sp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/userEt"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Aritst Name"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/titleEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/artistEt"
            android:textSize="16sp"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Song Title"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff" />

       <EditText
            android:id="@+id/userEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
           android:textSize="16sp"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Your Name"
            android:textColor="#ffffff"
            android:inputType="textPersonName"
            android:textColorHighlight="#131334"
            android:textColorHint="#ffffff"
            android:textColorLink="@color/colorAccent"
            android:layout_below="@+id/recText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
             />

        <EditText
            android:id="@+id/urlEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleEt"
            android:ems="10"
            android:hint="SoundCloud URL(필수사항 아니에욘!)"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="16sp"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff" />
        <Button
            android:id="@+id/sendBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/urlEt"
            android:background="@drawable/button_design"
            android:text="추천하기"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#ffffff"/>

    </RelativeLayout>

    <TextView
        android:text=" Contact ahn428@gmail.com "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactTv"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
