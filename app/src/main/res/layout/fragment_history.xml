<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyeongsuk.underthefield.main.History.HistoryFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/historyIntro"
        android:text="이전에 추천 된 곡들을 다시 만나보고 싶다면 해당 아티스트의 사운드 클라우드로 떠나보세요"
        android:textColor="#ffffff"
        android:background="#00257b"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_marginTop="92dp"
        android:gravity="center_vertical|center_horizontal" />
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:id="@+id/hPager"></android.support.v4.view.ViewPager>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/hTab"        >
    </android.support.design.widget.TabLayout>

</FrameLayout>
