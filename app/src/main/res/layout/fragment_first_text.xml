<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gyeongsuk.underthefield.start.FirstTextFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marea에서 추천하는"
            android:id="@+id/firstText"
            android:layout_marginTop="250dp"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사운드 클라우드의 멋진 곡들을"
            android:id="@+id/firstText2"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_below="@+id/firstText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="만나보세요"
            android:id="@+id/firstText3"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_below="@+id/firstText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"/>
    </RelativeLayout>

</FrameLayout>
